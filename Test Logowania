from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from webdriver_manager.chrome import ChromeDriverManager
from selenium.webdriver.chrome.service import Service


def test_uzytkownik_moze_sie_zalogowac():
    driver = webdriver.Chrome(service=Service(ChromeDriverManager().install()))
    wait = WebDriverWait(driver, 20)

    try:
        driver.get("https://demobank.jaktestowac.pl/logowanie_prod.html")

        login_input = wait.until(EC.visibility_of_element_located((By.ID, "login_id")))
        login_input.clear()
        login_input.send_keys("domino12")
        login_input.send_keys(Keys.TAB)  # czÄ™sto aktywuje "Dalej"

        wait.until(EC.element_to_be_clickable((By.CSS_SELECTOR, "button[type='submit'], input[type='submit']"))).click()

        password_input = wait.until(EC.visibility_of_element_located((By.ID, "login_password")))
        password_input.send_keys("domino20")
        password_input.send_keys(Keys.TAB)

        wait.until(EC.element_to_be_clickable((By.CSS_SELECTOR, "button[type='submit'], input[type='submit']"))).click()

        assert wait.until(EC.visibility_of_element_located((By.LINK_TEXT, "Wyloguj"))).is_displayed()

    finally:
        driver.quit()
